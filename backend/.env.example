# Base de datos
DATABASE_URL="postgresql://username:password@localhost:5432/cepeige_db?schema=public"

# Servidor
PORT=3000
NODE_ENV=development

# JWT Configuration - IMPORTANTE: Cambia estos secretos en producción
JWT_SECRET="TuSecretoSuperSeguroYComplejo123456789!@#$%^&*"
JWT_REFRESH_SECRET="TuRefreshSecretoSuperSeguroYComplejo987654321!@#$%^&*"
JWT_ACCESS_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Contraseñas iniciales para usuarios de ejemplo - CAMBIA EN PRODUCCIÓN
SUPERADMIN_PASSWORD="SuperAdmin123!"
ADMIN_PASSWORD="Admin123!"
CONTADOR_PASSWORD="Contador123!"

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Email (opcional para notificaciones)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log